                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:background="@drawable/icon_nor_arrow_right"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />

                <!--账户安全-->
                <LinearLayout
                    android:id="@+id/id_personel_safe"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/personel_page_item_height">
                    <TextView
                        android:layout_weight="3"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/personel_page_text"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="账户安全" />
                    <RelativeLayout
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/id_personel_safe_content"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/personel_page_text2"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="我是信息内容" />
                    </RelativeLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:background="@drawable/icon_nor_arrow_right"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />




            </LinearLayout>

            <!--占空间-->
            <View
                android:layout_width="fill_parent"
                android:layout_height="250dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
