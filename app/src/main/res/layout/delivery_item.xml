<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="130dp"
    android:layout_width="match_parent">


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_delivery_cb_iv"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="30dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/black2"/>
        <!--android:src="@drawable/template_product"-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <!--品牌标题-->
            <TextView
                android:id="@+id/id_product_title_profile"
                android:text="乐迪（Natridy）"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--型号介绍-->
            <TextView
                android:id="@+id/id_product_title_detail"
                android:text="BEL-12C涡轮空气对流循环扇/电风扇 黑色"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!--价格-->
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="￥"
                android:textColor="@color/primary"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/id_product_price"
                android:text="9999.99"
                android:textColor="@color/primary"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>


</FrameLayout>